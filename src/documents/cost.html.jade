        .row
          .col-lg-12.col-sm-12.col-xs-12
            table.table.table-striped.table-bordered.table-hover.table-responsive
              thead
                tr
                  th Description
                  th.col-sm-2 Price
                  th.col-sm-2 CCSD (BUPA) Code
              tbody
