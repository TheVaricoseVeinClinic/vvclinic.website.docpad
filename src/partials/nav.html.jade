section.navs

  //- This nav MUST come above the main navbar otherwise the main one
  //- overlaps it and the a hrefs don't work
  nav.navbar.navbar-default.navbar-static-top.contact-nav(role='contact')
    .container-fluid
        ul.nav.navbar-right(class=document.header_light && document.header_light == true ? "nav-tel-dark" : "nav-tel")
          li
            a(href="#{site.telephone_url}")
              i.fa.fa-phone
              | &nbsp;
              = site.telephone

  nav.navbar.navbar-default.navbar-static-top(role='navigation' style="background-color: transparent; top:-80px;")
    .container-fluid
      //- Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-nav-bar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href='/')
          img.logo-img(src="/img/logo.png" alt="The Varicose Veins Clinic")

      //- Collect the nav links, forms, and other content for toggling
      #main-nav-bar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li(class=document.TopMenuCategory==="Home"?"active":"")
            a(href='/') Home

          li(class=document.TopMenuCategory==="Treatments"?"active":"")
            a(href='/treatments.html') Treatments

          li(class=document.TopMenuCategory==="Team"?"active":"")
            a(href='/team.html') Team

          li(class=document.TopMenuCategory==="Cost"?"active":"")
            a(href='/cost.html') Cost

          li(class=document.TopMenuCategory==="FAQs"?"active":"")
            a(href='/faq.html') FAQs

          //- li(class=document.TopMenuCategory==="Gallery"?"active":"")
          //-   a(href='/gallery.html') Gallery

          li(class=document.TopMenuCategory==="Contact"?"active":"")
            a(href='/contact.html') Contact
